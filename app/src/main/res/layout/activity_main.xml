<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/teamA_textView"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/teamFontSize" />

                <TextView
                    android:id="@+id/team_a_goal_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:freezesText="true"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/score_textView"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/primaryFontSize" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/team_a_faul_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="sans-serif-medium"
                            android:padding="8dp"
                            android:text="@string/foul_textView"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="@dimen/secondaryFontSize" />

                        <TextView
                            android:id="@+id/team_a_faul_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="sans-serif-medium"
                            android:freezesText="true"
                            android:padding="8dp"
                            android:text="0"
                            android:textColor="#616161"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/team_a_penalty_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="sans-serif-medium"
                            android:padding="8dp"
                            android:text="@string/penatly_textView"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="@dimen/secondaryFontSize" />

                        <TextView
                            android:id="@+id/team_a_penalty_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="sans-serif-medium"
                            android:freezesText="true"
                            android:padding="8dp"
                            android:text="@string/score_textView"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="@dimen/secondaryFontSize" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="sans-serif-medium"
                            android:padding="8dp"
                            android:text="@string/yellowCard_textView"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="@dimen/secondaryFontSize" />

                        <TextView
                            android:id="@+id/team_a_yellow_card_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="sans-serif-medium"
                            android:freezesText="true"
                            android:padding="8dp"
                            android:text="@string/score_textView"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="@dimen/secondaryFontSize" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="sans-serif-medium"
                            android:padding="8dp"
                            android:text="@string/redCard_textView"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="@dimen/secondaryFontSize" />

                        <TextView
                            android:id="@+id/team_a_red_card_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="sans-serif-medium"
                            android:freezesText="true"
                            android:padding="8dp"
                            android:text="@string/score_textView"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="@dimen/secondaryFontSize" />
                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:onClick="goalForTeamA"
                    android:text="@string/goal_button"
                    android:textColor="@color/textColorPrimary"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:onClick="addFaulForTeamA"
                    android:text="@string/foul_button"
                    android:textColor="@color/textColorPrimary" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:onClick="addPenaltyForTeamA"
                    android:text="@string/penalty_button"
                    android:textColor="@color/textColorPrimary" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:onClick="addYellowCardForTeamA"
                    android:text="@string/yellowCard_button"
                    android:textColor="@color/textColorPrimary" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:onClick="addRedCardForTeamA"
                    android:text="@string/redCard_button"
                    android:textColor="@color/textColorPrimary" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/teamB_textView"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/teamFontSize" />

                <TextView
                    android:id="@+id/team_b_goal_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:freezesText="true"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/score_textView"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/primaryFontSize" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/team_b_faul_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="sans-serif-medium"
                            android:padding="8dp"
                            android:text="@string/foul_textView"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="@dimen/secondaryFontSize" />

                        <TextView
                            android:id="@+id/team_b_faul_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="sans-serif-medium"
                            android:freezesText="true"
                            android:padding="8dp"
                            android:text="@string/score_textView"
                            android:textColor="#616161"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/team_b_penalty_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="sans-serif-medium"
                            android:padding="8dp"
                            android:text="@string/penatly_textView"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="@dimen/secondaryFontSize" />

                        <TextView
                            android:id="@+id/team_b_penalty_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="sans-serif-medium"
                            android:freezesText="true"
                            android:padding="8dp"
                            android:text="@string/score_textView"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="@dimen/secondaryFontSize" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="sans-serif-medium"
                            android:padding="8dp"
                            android:text="@string/yellowCard_textView"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="@dimen/secondaryFontSize" />

                        <TextView
                            android:id="@+id/team_b_yellow_card_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="sans-serif-medium"
                            android:freezesText="true"
                            android:padding="8dp"
                            android:text="@string/score_textView"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="@dimen/secondaryFontSize" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="sans-serif-medium"
                            android:padding="8dp"
                            android:text="@string/redCard_textView"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="@dimen/secondaryFontSize" />

                        <TextView
                            android:id="@+id/team_b_red_card_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="sans-serif-medium"
                            android:freezesText="true"
                            android:padding="8dp"
                            android:text="@string/score_textView"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="@dimen/secondaryFontSize" />
                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:onClick="goalForTeamB"
                    android:text="@string/goal_button"
                    android:textColor="@color/textColorPrimary"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:onClick="addFaulForTeamB"
                    android:text="@string/foul_button"
                    android:textColor="@color/textColorPrimary" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:onClick="addPenaltyForTeamB"
                    android:text="@string/penalty_button"
                    android:textColor="@color/textColorPrimary" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:onClick="addYellowCardForTeamB"
                    android:text="@string/yellowCard_button"
                    android:textColor="@color/textColorPrimary" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:onClick="addRedCardForTeamB"
                    android:text="@string/redCard_button"
                    android:textColor="@color/textColorPrimary" />

            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:onClick="resetAllScores"
            android:text="@string/reset_button"
            android:textColor="@color/textColorPrimary" />

    </LinearLayout>

</ScrollView>